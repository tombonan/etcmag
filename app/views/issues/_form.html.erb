<div class = "blog-form-container">
<%= form_for @issue, :html => {:multipart => true} do |i| %>
	<p>
		<%= i.label :name %>:<br>
		<%= i.text_field :name %>
	</p>
	<% if @issue.image? %>
		
	<% else %>
	<p>
		<%= i.file_field :image %>
	</p>
	<% end %>
	<p>
		<%= i.submit "Update"%>
	</p>

<% end %>
</div>