<% provide(:title, "#{@blog.title}") %>

<div class = "blog-show-container">
	<div class = "blog-show-head">
		<div class = "blog-head-content">
			<h3><%= @blog.created_at.strftime("%d %B, %Y")%></h3>
			<h1><%= @blog.title %></h1>
			<h4 id = "author-name"><%= link_to @blog.author.name, author_path(@blog.author) %></h4>
		</div>
	</div>

	<div class = "blog-image">
		<%= image_tag('blog-placeholder.jpg') %>
	</div>

	<div class = "blog-show-text">
		<p><%=@blog.body.html_safe %></p>
	</div>
	
</div>